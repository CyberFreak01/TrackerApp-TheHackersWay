<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ipgrabberbg"
    tools:context=".iplogger">

    <TextView
        android:id="@+id/textView"
        android:layout_width="389dp"
        android:layout_height="152dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppinsmed"
        android:text="@string/iplogger"
        android:textColor=" #00FF00"
        android:textColorHighlight="@color/teal_200"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="245dp"
        android:layout_height="217dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ip" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="419dp"
        android:layout_height="110dp"
        android:fontFamily="@font/loveglitch"
        android:gravity="center"
        android:text="IP Grabber"
        android:textColor="@color/teal_200"
        android:textSize="65dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/button"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginTop="72dp"
        android:text="Lets Hack !"
        android:background="@drawable/round_button"
        android:fontFamily="@font/cracked"
        android:textColor="@color/purple_700"
        android:textSize="12dp"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>